{
  "manifest_version": 3,
  "name": "Materials Finder",
  "version": "0.1.0",
  "description": "Extracts clothing material composition from the current page DOM.",
  "action": {
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
